extends layoutAdmin

block body
  .admin__filters
    form(method="GET")
      div
        label(for="search") Search
        input(name="search" type="text" placeholder="Search products...")
      div
        label(for="sortBy") Sort By
        select(name="sortBy")
          option(value="newest" selected=(query.sort === "newest")) Newest
          option(value="oldest" selected=(query.sort === "oldest")) Oldest
          option(value="az" selected=(query.sort === "az")) Name A-Z
          option(value="za" selected=(query.sort === "za")) Name Z-A
      div
        label(for="subcategory") Subcategory
        select(name="subcategory")
          option(value="all" selected=(query.subcategory && query.subcategory === "all")) All
          option(value="emergency-drench-showers" selected=(query.subcategory === "emergency-drench-showers")) Emergency Drench Showers
          option(value="emergency-drench-showers" selected=(query.subcategory === "emergency-drench-showers")) Emergency Drench Showers
          option(value="emergency-drench-showers" selected=(query.subcategory === "emergency-drench-showers")) Emergency Drench Showers
          option(value="emergency-drench-showers" selected=(query.subcategory === "emergency-drench-showers")) Emergency Drench Showers
          option(value="emergency-drench-showers" selected=(query.subcategory === "emergency-drench-showers")) Emergency Drench Showers
      button.no-margin(type="submit") Apply Filter
    span Found #[span.bold= productCount] results
  .admin__listings
    a.admin__listings--add(href="/dashboard/products/new")
      span Add a Product
    if products
      for product in products
        +productListingAdmin(product)

  +adminPagination