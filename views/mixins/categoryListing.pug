mixin categoryListing(product)
  a.category__results--listing(href=product.pageURL)
    .category__results--listing--image(style=`background-image: url('${product.mainImageThumbnailURL}');`)
    .category__results--listing--text
      h2= product.title
      ul
        for feature in product.features
          li= feature
    .category__results--listing--more-info
      button.button__yellow.button__arrow More Info