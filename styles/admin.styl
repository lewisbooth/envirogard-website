@import 'variables'
@import 'variables-amp'

.admin

  &__bar
    background ampCMSBlack

    .container
      color white
      display flex
      align-items center
      flex-wrap wrap
      justify-content space-between

    img 
      max-height 2rem

    &--logo
      width 12rem

    &--right
      display flex
      align-items center
      white-space nowrap
      font-size 1.4rem
      line-height 1.8
      padding .5rem 1rem
      margin-right -1rem
      position relative

      &--user-icon 
        height 2rem
        width 2rem
        margin-left 1rem

      &--dropdown-icon 
        height 1rem
        width 1rem
        margin-left 1rem
        opacity 0.5

      &:hover
        background ampCMSBlackHover
        cursor pointer

        .admin__bar--right--dropdown
          display block

      &--dropdown
        position absolute
        display none
        z-index 999
        width 100%
        top calc(100% - 5px)
        left 0
        border-radius 5px
        overflow hidden
        padding-top 5px

        li a
          background ampCMSBlack
          padding 1rem
          display flex
          align-items center
          white-space nowrap
          color white
          text-decoration none

          &:hover
            background ampBlue
            color white

          img 
            max-width 2rem
            max-height 2rem
            margin-right 1rem