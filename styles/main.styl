@import 'variables'
  
.breadcrumbs
  background lightGrey
  padding 1.25rem 0
  margin-bottom 4rem

  .container
    display flex 
    flex-wrap wrap
    width 100%
    font-size 1.4rem

    li
      margin-right 1rem

      &::after
        content ">"

      &:last-child::after
        content ""

      a
        text-decoration none
        font-family plexBold
        margin-right 1rem

        &:hover
          text-decoration underline

.flash-messages
  display block

  .flash
    display block
    background-color firebrick
    color white

    .container
      text-align center
      display flex
      justify-content space-between
      align-items center

    &__text
      margin 0
      flex-grow 1

    &--success
      background-color forestgreen

      .flash__remove
        background-color forestgreen

        &:hover
          background-color darkgreen

    &__remove
      padding .5rem .75rem
      margin 0
      float right
      font-size 2rem
      background-color firebrick
      line-height 1

      &:hover
        cursor pointer
        background-color darkred

.home

  &__split-strip
    background-color mainYellow
    margin-top 6rem
    padding 3rem 0
    position relative

    .container
      display flex
      justify-content space-between
      align-items center
      position relative
      z-index 1

    &--popular-categories
      width 42rem
      padding-right containerPadding
      max-width 50%

      &--title
        display flex
        flex-wrap wrap
        align-items center
        justify-content space-between

        a
          margin-top .5rem

    &--environment
      width 40%
      display flex
      flex-direction column
      align-items flex-start

      p
        color white
        font-size 3.2rem
        font-family plexLight
        max-width 100%

    &--environment-background
      position absolute
      width 50%
      height 100%
      right 0
      top 0
      background-image url("/images/homepage/environment.jpg")
      background-size cover
      background-position 50%
      z-index 0    

.popular-products
  max-width 38rem

  li
    margin-bottom .5rem

    a
      background mainBlue
      padding 2rem
      color white
      text-decoration none
      display block
      font-size 1.8rem

      &:hover
        background-color mainBlueHover

      span
        display flex
        align-items center
        justify-content space-between

      span::after
        content "â†’"
        width 3rem
        height 3rem
        min-width 3rem
        font-family plexBold
        background-color white
        color mainBlue
        border-radius 3rem
        float right
        display flex
        align-items center
        justify-content center
        transform translateY(-.4rem)

.branch-finder 

  .container
    display flex
    flex-wrap wrap

  &__info
    width 50%
    display flex
    flex-direction column
    justify-content center
    align-items flex-start
    margin-top -5rem

    &--title
      width 100%
      display flex
      flex-wrap wrap
      justify-content space-between
      align-items flex-end
      margin 2rem 0

      h4
        margin 0

      &--use-location
        color mainBlue
        text-decoration underline
        display flex

        img
          width 2rem
          height 2rem
          margin-left 1rem

        &:hover
          cursor pointer

    &--block
      background mainBlue
      display flex
      width 100%

      &--titles
        background offBlack !important
        white-space nowrap

        li
          padding 2.5rem 5rem 2.5rem 3.5rem
          color white
          font-size 1.8rem
          border-bottom 1px solid offBlackHover

          span
            color mainYellow

            &::after
              content "."

          &:hover
            background offBlackHover
            cursor pointer
          
          &.active
            background mainBlue

      &--info
        padding 3rem
        width 100%
        color white
        display none
        background mainBlue

        &.active
          display block

        &--logo
          max-width 20rem

        h5
          margin 0 0 2.5rem 0

        ul
          flex-grow 1
          margin-right 1rem

        &--container
          display flex
          flex-wrap wrap
          align-items flex-start
          justify-content space-between
          font-size 1.5rem

          &--address, .button
            margin-bottom 2rem

          .button
            margin-top 0
            background mainYellow 
            color offBlack
            font-family plexBold

            &:hover
              background mainYellowHover

          &--opening-times
            margin-bottom .75rem
            width 100%

            li
              display flex
              flex-wrap wrap
              width 100% 
              justify-content space-between

            &--by-arrangement
              width 100%
              text-align right
              font-size 1.3rem

          &--contact

            a
              color mainYellow
              text-decoration none
              width 100%
              display flex
              align-items center
              font-size 1.8rem

              img
                width 2rem
                margin-right 1rem

  &__map
    padding 6rem 0
    margin 0 auto

#branch-finder-svg
  max-width 32rem
  margin 0 auto

  .landmass
    fill offBlack

  g.active .landmass
    fill mainBlue !important
    
  #branch-finder > g:hover
    cursor pointer

    .landmass
      fill offBlackHover

.faq
  padding 4rem 0 8rem 0 !important

 .page-columns__column
 
