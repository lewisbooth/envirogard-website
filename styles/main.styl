  &__carousel

    &--current
      border 1px solid lightGreyBorder

      .flickity-prev-next-button
        border-radius 0
        padding 4rem 2rem
        border 1px solid lightGreyBorder

      &--image
        padding-top 100%
        width 100%
        position relative

        img
          max-width 100%
          max-height 100%
