@media(max-width:mediaMobileWidth)

  .home

    &__split-strip
      padding 0
      margin 3rem 0 6rem 0

      .container
        flex-direction column
        align-items flex-start

      &--popular-categories
        max-width 100%
        padding-right 0
        margin-bottom 2rem

      &--environment
        max-width inherit
        width calc(100% + 2.2rem)
        box-sizing border-box
        padding 4rem 2rem
        margin 0 -1.1rem
        background-image url("/images/homepage/environment.jpg")
        background-size cover

      &--environment-background
        background none 

  .branch-finder

    .container
      flex-direction column

    &__info
      width 100%
      overflow hidden
      flex-direction column

      &--block
        flex-direction column-reverse

        &--titles li
          padding 1.5rem 2rem

    &__map
      width 60%

  .newsletter
    padding 2rem 0 4rem 0

    .container

      h4
        font-size 2rem

      form
        max-width 100%

  .footer

    > .container
      padding-bottom 0

    &__column
      width 50%
      margin-bottom 4rem

    &__bottom-strip

      img 
        margin-bottom .25rem

      span, a
        font-size 1.4rem

      .container > div
        display flex
        flex-direction column
        align-items flex-start