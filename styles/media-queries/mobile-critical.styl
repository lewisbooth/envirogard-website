@media(max-width:mediaMobileWidth)

  body
    margin-top 8.7rem

    &.nav-scroll .nav__secondary
      position relative

  .hide

    &__desktop
      display block !important

    &__mobile
      display none !important

  h4
    font-size 2rem

  .container
    padding 0 (containerPadding / 2)

  nav
    position fixed
    top 0
    z-index 999
    width 100%
    
  .nav
    z-index 9

    .container
      padding-top 1rem
      padding-bottom 1rem
      padding-right 2rem

    &__logo
      width 20rem
      height 3.6rem

    &__search
      display none

    &__menu
      flex-direction row

      &--useful-links
        display none

      &--branch
        display none

      &--search-mobile
        display block
        margin-right 2rem

        img 
          width 2.6rem
          height 2.6rem

      &--contact
        margin-top 0

        &--phone
          margin-left 0
          min-width auto
          
          span.active
            display none

          img 
            width 2.6rem !important
            height 2.6rem !important

    &__secondary
      z-index -1

      &--right
        display none !important

      .container
        position relative
        padding 0

        ul
          display none

        > div 
          width 100%
        
          > span 
            display block
            padding 1rem 0
            width 50%
            text-align center

            &:first-child
              border-right 1px solid lightBlue 

      &--dropdown
        background mainBlue

        + ul 
          display flex !important
          flex-direction column
          background mainBlueHover
          position absolute
          top 100%
          width 100vw
          transform translateY(-100%)
          transition transform .35s ease-in-out
          will-change transform
          z-index -1

          > li
            border-bottom 1px solid lightBlue 
            padding 0 !important

            > a
              display block
              box-sizing content-box
              padding 1.5rem !important
              box-shadow none !important
              width 100%

            &:hover
              cursor pointer
              background mainBlueHover
              
              ul              
                display none !important

          &.nav__secondary--industries > li

            a
              display none

            > ul
              display block !important
              background mainBlueHover !important
              transform translateY(-100%)
              transition transform .35s ease-in-out
              will-change transform
              z-index -1

              > li
                border-bottom 1px solid lightBlue 

                > a
                  color white !important
                  padding 1.5rem !important
                  display block !important

        &.active
          background mainBlueHover

          + ul
            transform translateY(0)
          
            &.nav__secondary--industries > li
              border-bottom none !important 

              > ul
                transform translateY(0) !important
                padding 0

  .home

    &__slider 

      &--carousel
        padding-top 82.2%

      .container
        padding 0.1rem

    &__promoted
      margin-top 3rem
      flex-direction column

      &--left-column
        margin-right 0
        width 100%

        &--offers
          flex-direction column

          a
            width 100%
            margin-bottom 2rem

      &--right-column
        margin-left -(containerPadding / 2)
        margin-right -(containerPadding / 2)
        margin-top 2rem

        h4
          padding-left (containerPadding / 2)

        &--industries

          ul li
            padding-left (containerPadding / 2)
            padding-right (containerPadding / 2)

            a
              padding 2rem (containerPadding / 2)
          
          &--live-chat
            max-height 40rem
            overflow hidden

            > img 
              display none

            &--text
              background lightGrey
              color black
              position relative
              padding 8rem containerPadding
              width 100%
              top 0
              left 0
              transform translateY(0) translateX(0)

              h4
                font-size 2.4rem
                margin 0 0 1rem 0

              h3
                font-size 2.2rem
                margin 0 0 2rem 0

            .button
              margin 0
  
  .category-listings

    &__entry
      width 100%
      margin-bottom 2rem
      position relative
      margin-right 0
      margin-bottom 0
      text-decoration none
      background-color mainBlue

      img 
        display none

      &--label
        position relative
        padding 2rem 1.75rem
        background none

        h3
          font-weight 500
          font-size 1.6rem
        
      &:hover .category-listings__entry--label
        background none