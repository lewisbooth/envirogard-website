@media(max-width:mediaMobileWidth)

  h4
    font-size 2rem

  .container
    padding 0 (containerPadding / 2)

  .nav

    .container
      padding-top 1.5rem
      padding-bottom 1.5rem
      padding-right 2rem

    &__logo
      width 20rem
      height 3.6rem

    &__search
      display none


    &__menu

      &--useful-links
        display none

      &--contact a
        margin-top -.5rem
        
        span
          display none

        img 
          width 2.6rem
          height 2.6rem

    &__secondary      

      &--right
        display none !important

      &--left
        width 100%
        overflow hidden

  .home

    &__slider 

      &--carousel
        padding-top 82.2%

      .container
        padding 0.1rem

    &__promoted
      margin-top 3rem
      flex-direction column

      &--left-column
        margin-right 0
        width 100%

        &--offers
          flex-direction column

          a
            width 100%
            margin-bottom 2rem

      &--right-column
        margin-left -(containerPadding / 2)
        margin-right -(containerPadding / 2)
        margin-top 2rem

        h4
          padding-left (containerPadding / 2)

        &--industries--live-chat
          max-height 40rem
          overflow hidden

          &--text
            padding 0 4rem 4rem 4rem
            width 100%
            max-height 20rem
            top 100%
            transform translateY(-100%) translateX(-50%)

  
  .category-listings

    &__entry
      width calc(50% - .5rem)
      margin-bottom 2rem
      position relative
      margin-right 1rem
      text-decoration none
      background-color mainBlueTransparent 

      &:nth-child(3n)
        margin-right 1rem

      &:nth-child(2n)
        margin-right 0

      &--label
        position relative
        padding 1rem 1.25rem
        background none
        
      &:hover .category-listings__entry--label
        background none