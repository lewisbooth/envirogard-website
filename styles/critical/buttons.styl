button, .button
  display inline-flex
  align-items center
  justify-content center
  padding 1rem 1.5rem
  margin 2rem 0
  border none
  background-color mainBlue
  color white
  font-size 1.4rem
  text-decoration none !important
  user-select none
  font-size 1.6rem

  &:hover
    background-color mainBlueHover
    color white
    cursor pointer

  img 
    max-width 3rem
    max-height 2rem
    margin-left 1rem

    &:first-child
      margin-left 0